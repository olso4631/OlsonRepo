@model CarDealership.Models.ContactForm
@{
    ViewBag.Title = "Contact Us ";
    var items = new List<SelectListItem>(){
      new SelectListItem() {
          Text = "6 months",
          Value = "6"
      },
            new SelectListItem() {
          Text = "12 months",
          Value = "12"
      },
            new SelectListItem() {
          Text = "24 months",
          Value = "24"
      },
            new SelectListItem() {
          Text = "36 months",
          Value = "36"
      }
    };
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
@using (Html.BeginForm("Sales", "Home", FormMethod.Post))
{
    <div>
        @Html.ValidationSummary(true)
    </div>
    <div class=col-md-6>
        <div class="form-group">
            <label class="p2">Name</label><br />
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)<br />
        </div>
        <div class="form-group">
            <label class="p2">Phone Number</label><br />
            @Html.TextBoxFor(m => m.PhoneNumber)
            @Html.ValidationMessageFor(m => m.PhoneNumber)<br />
        </div>
        <div class="form-group">
            <label class="p2">Time frame to purchase a new car</label><br />
            @Html.DropDownListFor(m => m.PurchaseTimeFrameInMonths, items)
        </div>
        <div class="form-group">
            <label class="p2">Email</label><br />
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)<br />
        </div>
        <div class="form-group">
            <label class="p2">Income</label><br />
            @Html.TextBoxFor(m => m.Income)<br />
            @Html.ValidationMessageFor(m => m.Income)<br />
        </div>
        <div style="margin-bottom:15px;">
            <button>Submit</button>
        </div>
    </div>
    <div class="col-md-6">
        <img src="http://i.ebayimg.com/00/s/NDgzWDQ1Mw==/z/zSAAAOSwYGFUyBpu/$_35.JPG" />
    </div>
}