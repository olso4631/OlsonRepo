@model CarDealership.Models.Car
@{
    ViewBag.Title = "Details";
}

<h2 class="p2" style="background:#999; padding: 5px; "> Car Details</h2>

<div class="col-md-4">
    <ul>

        <li class="p2"><strong>Make:</strong>@Model.Model</li>
        <li class="p2"><strong>Year:</strong>@Model.Year</li>
        <li class="p2"><strong>Title:</strong>@Model.Title</li>
        <li class="p2"><strong>Make:</strong>@Model.Make</li>
        <li class="p2"><strong>Description:</strong>@Model.Description</li>
    </ul>
</div>
<div class="p2"><strong>Have an Interest? Click the button below to give us your info!</strong></div>

<input type="button" value="Click HERE to BUY TODAY!" onclick="location.href='@Url.Action("Interest", "Home")'" />
<div class="Col-md-6">
    <img src=@Model.ImageUrl>

</div>
