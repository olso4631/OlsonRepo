@model IEnumerable<CarDealership.Models.Car>
@{
    ViewBag.Title = "Index";
}

<h2><strong>One Of These Can Be Yours Today!</strong></h2>
<h4><strong>Click on one for more details!</strong></h4>
<h5>Or if you're looking to sell a car click the button below!</h5>

<input style="margin-bottom: 5px;" type="button" value="Sell A Car" onclick="location.href='@Url.Action("Add", "Car")'" />


@if (ViewBag.User != null)
{
    <h3>@ViewBag.User.UserMessage</h3>
}
<div class="container">
    @for (int i = 0; i < Model.Count(); i = i + 3)
    {
        var ca = Model.ElementAt(i);
        <div class="row">
            <div class="col-md-4">
                <a href="@Url.Action("Details", new { id = ca.Id })">
                    <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                </a>
            </div>
            @if ((i + 1) < Model.Count())
            {
                ca = Model.ElementAt(i + 1);
                <div class="col-md-4">
                    <a href="@Url.Action("Details", new { id = ca.Id })">
                        <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                    </a>
                </div>
            }
            @if ((i + 2) < Model.Count())
            {
                ca = Model.ElementAt(i + 2);
                <div class="col-md-4">
                    <a href="@Url.Action("Details", new { id = ca.Id })">
                        <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                    </a>
                </div>
            }
        </div>
            <div>
                &nbsp;
            </div>
    }
</div>